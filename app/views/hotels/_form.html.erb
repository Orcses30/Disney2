<%= form_for @hotel do |f| %>

  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@hotel.errors.count, "error") %>
            kept this Disney hotel from being saved:
      </h2>
      <ul>
        <% @hotel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :hotel_name %><br>
    <%= f.text_field :hotel_name %>
  </p>

  <p>
    <%= f.label :hotel_description %><br>
    <%= f.text_area :hotel_description %>
  </p>

  <p>
    <%= f.submit %>
  </P>

<% end %>
