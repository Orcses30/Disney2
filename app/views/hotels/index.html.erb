<h1>List of Hotels</h1>

<table>
  <tr>
    <th>Hotel Name</th>
    <th>Hotel Description</th>
  </tr>

  <% @hotels.each do |hotel| %>
    <tr>
      <td><%= hotel.hotel_name %></td>
      <td><%= hotel.hotel_description %></td>
      <td><%= link_to 'View', hotel_path(hotel) %></td>
      <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
      <td><%= link_to 'Delete', hotel_path(hotel),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create Hotel', new_hotel_path %>
