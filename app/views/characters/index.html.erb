<h1>List of Characters</h1>

<table>
  <tr>
    <th>Character Name</th>
    <th>Character Description</th>
  </tr>

  <% @characters.each do |character| %>
    <tr>
      <td><%= character.character_name %></td>
      <td><%= character.character_description %></td>
      <td><%= link_to 'View', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Delete', character_path(character),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create Character', new_character_path %>
