<%= form_for @ride do |f| %>

  <% if @ride.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ride.errors.count, "error") %>
            kept this Disney ride from being saved:
      </h2>
      <ul>
        <% @ride.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :ride_name %><br>
    <%= f.text_field :ride_name %>
  </p>

  <p>
    <%= f.label :ride_description %><br>
    <%= f.text_area :ride_description %>
  </p>

  <p>
    <%= f.submit %>
  </P>

<% end %>
